import winston from 'winston';
{{#if fastifyFramework}}

const logLevels = {
  fatal: 0,
  error: 1,
  warn: 2,
  info: 3,
  debug: 4,
  trace: 5,
};

const logColors = {
  fatal: 'black redBG',
  error: 'red',
  warn: 'yellow',
  info: 'green',
  debug: 'blue',
  trace: 'magenta',
};

winston.addColors(logColors);
{{/if}}

export default winston.createLogger({
  {{#if fastifyFramework}}
  levels: logLevels,
  {{/if}}
  transports: [
    new winston.transports.Console({
      format: winston.format.combine(winston.format.cli(), winston.format.splat()),
    }),
  ],
});
